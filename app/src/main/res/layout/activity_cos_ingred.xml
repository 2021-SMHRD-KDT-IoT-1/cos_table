<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cos_IngredActivity">

    <ImageView
        android:id="@+id/img_ingCos"
        android:layout_width="121dp"
        android:layout_height="213dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_Cos_content"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_Cos_content"
        android:layout_width="207dp"
        android:layout_height="215dp"
        android:text="@string/tv_Cos_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_ingCos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/img_ingCos"
        app:layout_constraintTop_toTopOf="@+id/img_ingCos" />

    <TextView
        android:id="@+id/tv_Cos_Ingred"
        android:layout_width="355dp"
        android:layout_height="239dp"
        android:layout_marginTop="8dp"
        android:text="@string/tv_Cos_Ingred"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline11" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />
</androidx.constraintlayout.widget.ConstraintLayout>