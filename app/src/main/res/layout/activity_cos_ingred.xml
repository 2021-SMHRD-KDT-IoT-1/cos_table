<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cos_IngredActivity">

    <ImageView
        android:id="@+id/img_ingCos"
        android:layout_width="121dp"
        android:layout_height="213dp"
        android:layout_marginStart="28dp"

        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_ing1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/tv_ing1"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_ing2"
        app:layout_constraintStart_toStartOf="@+id/img_ingCos"
        app:layout_constraintTop_toTopOf="@+id/guideline11"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_ing2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/tv_ing2"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_ing3"
        app:layout_constraintStart_toStartOf="@+id/tv_ing1"
        app:layout_constraintTop_toBottomOf="@+id/tv_ing1" />

    <TextView
        android:id="@+id/tv_ing3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/tv_ing3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_ing4"
        app:layout_constraintStart_toStartOf="@+id/tv_ing2"
        app:layout_constraintTop_toBottomOf="@+id/tv_ing2" />

    <TextView
        android:id="@+id/tv_ing4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/tv_ing4"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_ing5"
        app:layout_constraintStart_toStartOf="@+id/tv_ing3"
        app:layout_constraintTop_toBottomOf="@+id/tv_ing3" />

    <TextView
        android:id="@+id/tv_ing5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_ing5"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_ing4"
        app:layout_constraintTop_toBottomOf="@+id/tv_ing4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <TextView
        android:id="@+id/tv_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제품명"
        app:layout_constraintBottom_toTopOf="@+id/tv_detail_brand"
        app:layout_constraintStart_toStartOf="@+id/guideline10"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_detail_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제조사"
        app:layout_constraintBottom_toTopOf="@+id/tv_detail_type"
        app:layout_constraintStart_toStartOf="@+id/tv_detail_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_name" />

    <TextView
        android:id="@+id/tv_detail_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제형"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintStart_toStartOf="@+id/tv_detail_brand"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_brand" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="205dp" />

    <TextView
        android:id="@+id/tv_ing_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주요성분"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline11" />

</androidx.constraintlayout.widget.ConstraintLayout>